{
  "name": "progressive-json-monorepo",
  "private": true,
  "version": "0.0.1",
  "description": "Monorepo for progressive-json and its examples using pnpm workspaces",
  "workspaces": [
    "progressive-json",
    "examples/demo/client",
    "examples/demo/server"
  ],
  "scripts": {
    "dev:demo:client": "pnpm --filter client --dir examples/demo run dev",
    "dev:demo:server": "pnpm --filter server --dir examples/demo run dev",
    "dev:demo": "pnpm run dev:demo:server & pnpm run dev:demo:client",
    "build": "pnpm --filter @yoyo-org/progressive-json run build",
    "version": "lerna version --conventional-commits",
    "version:manual": "./scripts/version.sh",
    "publish": "lerna publish from-git --yes",
    "publish:auto": "lerna publish --yes",
    "publish:progressive-json": "./scripts/publish.sh",
    "publish:progressive-json:dry-run": "./scripts/publish-dry-run.sh"
  },
  "devDependencies": {
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "lerna": "^8.1.2"
  }
}
